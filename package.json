{
  "name": "youtube-subscriber-spreadsheet-apps-script",
  "version": "0.0.2",
  "author": "Chris K.Y. FUNG (https://chriskyfung.github.io/)",
  "description": "Google Apps Script to extract and record the information of your YouTube subscribers from Gmail to Google Sheet",
  "license": "AGPL-3.0",
  "main": "src/index.js",
  "engines": {
    "node": ">= 20.0.0"
  },
  "scripts": {
    "build": "rollup --config",
    "build:clean": "rimraf build/",
    "build:watch": "npm run build -- --watch",
    "clasp:create": "rimraf .clasp.json && clasp create && prettier --write .clasp.json",
    "clasp:login": "clasp login",
    "deploy": "npm run check:all && npm run build && npm run push",
    "format:check-all": "npm run format:check-file -- .",
    "format:check-file": "prettier --check",
    "format:fix-all": "npm run format:fix-file -- .",
    "format:fix-file": "prettier --write",
    "lint:check-all": "npm run lint:check-file -- .",
    "lint:check-file": "eslint --ext ts --ext js --max-warnings 0",
    "lint:fix-all": "npm run lint:check-all -- --cache --fix",
    "lint:fix-file": "npm run lint:check-file -- --cache --fix",
    "prepare": "husky",
    "push": "clasp push",
    "push:watch": "npm run push -- --watch",
    "test": "jest",
    "test:file": "jest --bail --findRelatedTests --passWithNoTests",
    "test:watch": "npm run test -- --watchAll",
    "check:all": "npm run lint:check-all && npm run format:check-all && npm run types:check-all && npm test",
    "types:check-all": "tsc",
    "types:check-file": "tsc --target ES5 --module ESNext --moduleResolution node --lib ESNext --noEmit --pretty --skipLibCheck --allowJs --allowSyntheticDefaultImports --strict --noImplicitAny --noImplicitOverride --noImplicitThis --noUnusedLocals --noUnusedParameters --useUnknownInCatchVariables --noFallthroughCasesInSwitch"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/plugin-transform-runtime": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@google/clasp": "^3.1.3",
    "@rollup/plugin-babel": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@types/eslint": "^8.56.12",
    "@types/google-apps-script": "^2.0.7",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "gts": "^6.0.2",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.0",
    "rollup": "^4.53.3",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "clasp",
    "google-apps-script",
    "gmail",
    "google-sheet",
    "youtubers-toolkit",
    "youtube-subscribers"
  ],
  "lint-staged": {
    "**/*.{js,ts}": [
      "eslint --fix",
      "prettier --write",
      "npm run test:file"
    ]
  }
}
